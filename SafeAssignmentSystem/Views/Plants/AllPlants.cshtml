@using SafeAssignmentSystem.Models.FactoriesViewModels;
@model IEnumerable<EditPlantViewModel>
@{
    ViewBag.Title = "Всички инсталации";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var plant in Model)
    {
            <div class="card col-4">
                <div class="card-body">
                    <h5 class="card-title mt-1">@plant.FullName</h5>
                    <p class="mb-0">@plant.Name</p>
                    <p class="mb-0">Комплекс: @plant.ComplexName</p>
                </div>
                <a asp-controller="Plants"
                    asp-action="EditPlant"
					asp-route-id="@plant.Id"
					class="btn btn-info mb-3 p-2">
                    Редактиране на инсталация
                </a>
            </div>
    }
</div>
