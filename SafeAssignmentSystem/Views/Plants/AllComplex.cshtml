@using SafeAssignmentSystem.Models.FactoriesViewModels;
@model IEnumerable<EditComplexViewModel>

@{
	ViewBag.Title = "Всички комплекси";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
	@foreach (var book in Model)
	{
			<div class="card col-4">
				<div class="card-body">
					<h6 class="mb-0">@book.FullName</h6>
					<p class="mb-0">@book.Name</p>
				</div>

				<form class="input-group-sm" asp-controller="PlantsController" asp-action="EditComplex" asp-route-id="@book.Id">
						<input type="submit" value="Редактиране на комплекс" class="fs-6 btn btn-warning mb-3 p-2" />
				</form>

				<form class="input-group-sm" asp-controller="PlantsController" asp-action="DeleteComplex" asp-route-id="@book.Id">
						<input type="submit" value="Изтриване на комплекс" class="fs-6 btn btn-danger mb-3 p-2" />
				</form>
			</div>
	}
</div>