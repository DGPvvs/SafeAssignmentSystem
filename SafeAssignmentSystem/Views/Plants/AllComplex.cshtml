@using SafeAssignmentSystem.Models.FactoriesViewModels;
@model IEnumerable<EditComplexViewModel>

@{
	ViewBag.Title = "Всички комплекси";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
	@foreach (var complex in Model)
	{
			<div class="card col-4">
				<div class="card-body">
						<h6 class="mb-0">@complex.FullName</h6>
						<p class="mb-0">@complex.Name</p>
				</div>

				<a asp-controller="Plants"
					asp-action="EditComplex"
					asp-route-id="@complex.Id"
					class="btn btn-warning mb-3 p-2">
					Редактиране на комплекс
				</a>
				<a asp-controller="Plants"
					asp-action="DelComplex"
					asp-route-id="@complex.Id"
					class="btn btn-danger mb-3 p-2">
					Изтриване на комплекс
				</a>				
			</div>
	}
</div>