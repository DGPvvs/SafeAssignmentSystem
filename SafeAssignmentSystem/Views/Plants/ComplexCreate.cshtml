@using SafeAssignmentSystem.Models.FactoriesViewModels;
@model ComplexViewModel

@{
    ViewBag.Title = "Добавяне на комплекс";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="ComplexCreate" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FullName" class="form-label">Пълно наименование на комплекса</label>
                <input asp-for="@Model.FullName" class="form-control" aria-required="true" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Кратко наименование на комплекса</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning" type="submit" value="Създаване на комплекс" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}