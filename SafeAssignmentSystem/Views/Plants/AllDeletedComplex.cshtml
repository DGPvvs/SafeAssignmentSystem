@using SafeAssignmentSystem.Models.FactoriesViewModels;
@model IEnumerable<EditComplexViewModel>

@{
	ViewBag.Title = "Всички изтрити комплекси";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
	@foreach (var complex in Model)
	{
				<div class="card col-4">
					<div class="card-body">
							<h6 class="mb-0">@complex.FullName</h6>
							<p class="mb-0">@complex.Name</p>
					</div>

					<a asp-controller="Plants"
						asp-action="ComplexRecovery"
						asp-route-id="@complex.Id"
						class="btn btn-success mb-3 p-2">
						Възстановяване на комплекса
					</a>
				</div>
	}
</div>
