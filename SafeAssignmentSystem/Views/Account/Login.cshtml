@using SafeAssignmentSystem.Models.AccountViewModels;
@model LoginViewModel

@{
    ViewData["Title"] = "Достъп до приложението!";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Използвайте локален акаунт, за да достъпите приложението.</h2>
                <hr />
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="UserName" class="form-label">Потребителско име</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label">Парола</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Достъп</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}