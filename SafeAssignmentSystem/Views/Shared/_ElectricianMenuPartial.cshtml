<div class="bs-example">
    <div class="row">
        <div class="col-md-3">
            <!-- Менажиране на наряди -->

            <div class="btn-group dropend">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">Менажиране на наряди</button>
                <ul class="dropdown-menu multi-level" >
                    <li class="nav-item dropdown">
                        <!-- Откриване на наряд -->
                        <a class="nav-link btn-success text-white dropdown-toggle"                            
                            asp-controller="Choices"
                            asp-action="ChoisPlant"
                            asp-route-data="Choices ChoisTechnologicalPosition SafeAssignment OpeningSafeAssignment">
                            Откриване на наряд
                        </a>

                        <!-- Закриване на наряд -->
                        <a class="nav-link btn-danger text-white dropdown-toggle"                            
                            asp-controller="Choices"
                            asp-action="ChoisPlant"
                            asp-route-data="Choices ChoisTechnologicalPosition SafeAssignment ClosingSafeAssignment">
                            Закриване на наряд
                        </a>

                        <!-- Подадено напрежение -->
                        <a class="nav-link btn-info text-dark dropdown-toggle"
                            asp-controller="Choices"
                            asp-action="ChoisPlant"
                            asp-route-data="Choices ChoisTechnologicalPosition SafeAssignment AppliedSafeAssignment">
                            Подадено напрежение
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
